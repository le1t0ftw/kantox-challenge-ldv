{
    "dashboard": {
      "id": null,
      "uid": "services-monitoring",
      "title": "Main API & Auxiliary Service Monitoring",
      "timezone": "browser",
      "panels": [
        {
          "title": "CPU Usage (cores)",
          "type": "graph",
          "targets": [
            {
              "expr": "rate(container_cpu_usage_seconds_total{namespace=\"default\", pod=~\"main-api|auxiliary-service\"}[5m])",
              "legendFormat": "{{pod}}",
              "interval": ""
            }
          ]
        },
        {
          "title": "Memory Usage (bytes)",
          "type": "graph",
          "targets": [
            {
              "expr": "container_memory_working_set_bytes{namespace=\"default\", pod=~\"main-api|auxiliary-service\"}",
              "legendFormat": "{{pod}}",
              "interval": ""
            }
          ]
        },
        {
          "title": "Pod Status",
          "type": "table",
          "targets": [
            {
              "expr": "count by (pod, phase) (kube_pod_status_phase{namespace=\"default\", pod=~\"main-api|auxiliary-service\"})",
              "legendFormat": "{{pod}}: {{phase}}",
              "interval": ""
            }
          ]
        },
        {
          "title": "HTTP Requests (rate)",
          "type": "graph",
          "targets": [
            {
              "expr": "rate(http_requests_total{namespace=\"default\", pod=~\"main-api|auxiliary-service\"}[5m])",
              "legendFormat": "{{pod}}",
              "interval": ""
            }
          ]
        },
        {
          "title": "HTTP Response Latency (95th Percentile)",
          "type": "graph",
          "targets": [
            {
              "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{namespace=\"default\", pod=~\"main-api|auxiliary-service\"}[5m]))",
              "legendFormat": "{{pod}}",
              "interval": ""
            }
          ]
        }
      ],
      "schemaVersion": 16,
      "version": 1
    }
  }
  